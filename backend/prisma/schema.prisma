generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id
  name      String
  email     String   @unique
  password  String
  devMode   Boolean
  avatar    String
  createdAt DateTime
  updatedAt DateTime @updatedAt

  @@map("users")
}

model Stock {
  id              String            @id
  name            String            @unique
  amount          Int
  description     String
  category        String
  createdAt       DateTime
  updatedAt       DateTime          @updatedAt
  markId          String
  mark            Mark              @relation(fields: [markId], references: [id])
  StockProduction StockProduction[]

  @@map("stock")
}

model Mark {
  id        String   @id
  name      String   @unique
  createdAt DateTime
  updatedAt DateTime @updatedAt
  Stock     Stock[]

  @@map("mark")
}

model StockProduction {
  stockId      String
  productionId String

  stock      Stock      @relation(fields: [stockId], references: [id])
  production Production @relation(fields: [productionId], references: [id])

  @@id([stockId, productionId])
  @@map("stock_production")
}

model Production {
  id              String            @id
  model           String
  amount          Int
  door            Int
  colour          String
  airbag          Int
  pc              Boolean
  gear            Boolean
  createdAt       DateTime
  updatedAt       DateTime          @updatedAt
  StockProduction StockProduction[]
  Quality         Quality[]

  @@map("production")
}

model Quality {
  id           String     @id
  car          String
  door         Boolean
  engine       Boolean
  chassi       Boolean
  tire         Boolean
  window       Boolean
  ligh         Boolean
  seat         Boolean
  airbag       Boolean
  extra        Boolean
  eletric      Boolean
  aproval      Boolean?
  number       Int?
  resume       Int?
  createdAt    DateTime
  updatedAt    DateTime
  productionId String     @unique
  production   Production @relation(fields: [productionId], references: [id])

  @@map("quality")
}
